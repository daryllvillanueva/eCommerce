@{

}

<section class="bg-gray-50 dark:bg-gray-900 min-h-[93.4vh] flex items-center justify-center">
    <div class="flex flex-col items-center justify-center px-6 py-8 w-full max-w-lg space-y-4">
        <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
            ProtoTech
        </a>
        <div class="w-full p-6 bg-white rounded-lg shadow dark:border sm:max-w-md dark:bg-gray-800 dark:border-gray-700 sm:p-8">
            <h2 class="mb-1 text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                Forgot Password
            </h2>

            @if(ViewBag.SuccessMessage != null)
            {
            <div id="alert-border-3" class="flex items-center justify-between p-4 mb-4 mt-2 text-green-800 border-t-4 border-green-300 bg-green-50 dark:text-green-400 dark:bg-gray-700 dark:border-green-600" role="alert">
                <div class="ms-3 text-sm font-medium">
                    <strong>@ViewBag.SuccessMessage</strong>
                </div>
                <button type="button" class="ml-3 bg-green-50 text-green-500 rounded-lg p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-700 dark:text-green-400 dark:hover:bg-gray-600" data-dismiss-target="#alert-border-3" aria-label="Close">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                </button>
            </div>
            }

            <form class="mt-4 space-y-4 lg:mt-5 md:space-y-5" method="post">
                <div>
                    <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                    <input name="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" value="@ViewBag.Email">
                    <span class="text-red-600">@ViewBag.EmailError</span>
                </div>
                <div class="flex gap-2 items-center">
                    <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-3 text-center">Submit</button>
                    <a class="w-full text-blue-600 border-2 border-blue-600 hover:bg-gray-50 font-medium rounded-lg text-sm px-5 py-2.5 text-center" asp-controller="Account" asp-action="Login">Login</a>
                </div>
            </form>
        </div>
    </div>
</section>
