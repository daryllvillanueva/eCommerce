@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<section class="bg-white py-8 antialiased dark:bg-gray-900 md:py-16">
    <div class="mx-auto grid max-w-screen-xl px-4 pb-8 md:grid-cols-12 lg:gap-12 lg:pb-16 xl:gap-0">
        <div class="content-center justify-self-start md:col-span-7 md:text-start">
            <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight dark:text-white md:max-w-2xl md:text-5xl xl:text-6xl">Limited Time Offer!<br />Up to 50% OFF!</h1>
            <p class="mb-4 max-w-2xl text-gray-500 dark:text-gray-400 md:mb-12 md:text-lg mb-3 lg:mb-5 lg:text-xl">Don't Wait - Limited Stock at Unbeatable Prices!</p>
            <a class="inline-block rounded-lg bg-primary-700 px-6 py-3.5 text-center font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Shop Now</a>
        </div>
        <div class="hidden md:col-span-5 md:mt-0 md:flex">
            <img class="dark:hidden" src="https://flowbite.s3.amazonaws.com/blocks/e-commerce/girl-shopping-list.svg" alt="shopping illustration" />
            <img class="hidden dark:block" src="https://flowbite.s3.amazonaws.com/blocks/e-commerce/girl-shopping-list-dark.svg" alt="shopping illustration" />
        </div>
    </div>
</section>

<div class="w-full px-4 py-8">
    <h2 class="text-2xl text-center mb-5">Newest Products</h2>
    <div class="flex flex-wrap justify-center gap-6">
        @foreach (var product in Model)
        {
            <a class="w-[300px] max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700"
               asp-controller="Store" asp-action="Details" asp-route-id="@product.Id">
                <div class="block h-[180px] overflow-hidden" role="button">
                    <img class="w-full h-full object-contain p-8" src="/products/@product.ImageFileName" alt="product image" />
                </div>
                <div class="px-5 pb-5 border-t border-gray-200 min-h-[200px]">
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white py-2">@product.Name</h5>
                    <div>
                        <span class="px-2.5 py-1 text-xs font-medium text-center text-gray-900 bg-gray-200 border border-gray-300 rounded-full hover:bg-gray-300 hover:text-gray-900 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:text-white inline-block">
                            @product.Category
                        </span>

                        <span class="px-2.5 py-1 text-xs font-medium text-center text-gray-900 bg-gray-200 border border-gray-300 rounded-full hover:bg-gray-300 hover:text-gray-900 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:text-white inline-block">
                            @product.Brand
                        </span>
                    </div>
                    <p class="text-sm mt-3 text-gray-900 dark:text-white">Featuring a 15.6"@product.Description</p>
                </div>
                
                <div class="px-5 pb-5 mt-auto text-right">
                    <p class="text-xl font-bold leading-tight text-gray-900 dark:text-white">₱@(product.Price)</p>
                </div>
            </a>
        }
    </div>
    
</div>

